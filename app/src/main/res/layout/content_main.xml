<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9f030a"
            android:id="@+id/toolbar"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:src="@drawable/menu"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/menu"
                android:layout_alignParentRight="true"
                android:background="#00ffffff"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentLeft="true"
                android:background="#ffffff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="#fff"
                android:textSize="@dimen/abc_text_size_display_1_material"
                android:id="@+id/title"
                android:textAlignment="center"
                android:gravity="center_vertical|center_horizontal"
                android:text="أخبـــار مصرنـــا"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:id="@+id/weatherData"
            android:layout_below="@+id/toolbar"
            android:orientation="horizontal"
            android:background="#fd7c7c">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:maxLines="1"
                    android:minLines="1"
                    android:textColor="#000"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/high"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:paddingLeft="5dp"
                        android:maxLines="1"
                        android:minLines="1"
                        android:textColor="#000"/>
                    <TextView
                        android:id="@+id/low"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:maxLines="1"
                        android:minLines="1"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:layout_marginLeft="8dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_marginRight="16dp"
                android:orientation="vertical"
                android:gravity="center_horizontal|bottom">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="?actionBarSize"
                    android:layout_height="?actionBarSize"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/conditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:maxLines="1"
                    android:minLines="1"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#000"/>
            </LinearLayout>
        </LinearLayout>
        <EditText
            android:id="@+id/inputSearch"
            android:layout_margin="5sp"
            android:padding="5sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="إبحث عن أخبار"
            android:layout_below="@id/weatherData"
            android:gravity="right"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginRight="15sp"
            android:layout_marginLeft="15sp"
            android:textColor="#aca6a6"
            android:textColorHint="#bfbaba"
            android:background="@drawable/shape_search_background"
            android:drawableLeft="@drawable/searchicon"
            android:inputType="textFilter"/>
        <ListView
            android:layout_below="@+id/inputSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/category_list">
        </ListView>
        <View
            android:layout_width="@dimen/menu_width"
            android:layout_height="0dp"
            android:id="@+id/view_line"
            android:background="#00ffffff"/>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
