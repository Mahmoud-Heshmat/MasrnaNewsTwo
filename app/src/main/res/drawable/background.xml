<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false" android:state_focused="false">
        <shape>
            android:background="#F6EBC9"
            <gradient
                android:startColor="#f7f4f4"
                android:centerColor="#E9EAED"
                android:endColor="#f7f4f4"
                android:angle="270"
                />

            <corners
                android:radius="10dp" />
        </shape>
    </item>

    <item android:state_pressed="true">

        <shape>
            <gradient
                android:startColor="#ff7f1e"
                android:centerColor="#ff6039"
                android:endColor="#ff913a"
                android:angle="270"
                />
            <stroke
                android:background="#eb6cd57d"
                android:width="2.3dp"
                android:color="#F6EBC9" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>


</selector>